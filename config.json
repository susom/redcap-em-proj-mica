{
    "name": "Project MICA",

    "namespace": "Stanford\\MICA",

    "description": "An EM specific to the MICA project.  Chatbot Agent",

    "documentation": "README.md",

    "authors": [
        {
            "name": "Irvin Szeto",
            "email": "irvins@stanford.edu",
            "institution": "Stanford University"
        },
        {
            "name": "Jordan Schultz",
            "email": "jmschult@stanford.edu",
            "institution": "Stanford University"
        }
    ],
    "framework-version": 14,

    "enable-every-page-hooks-on-system-pages": true,

    "enable-no-auth-logging": true,

    "links": {
        "project": [
            {
                "name": "MICA Chatbot",
                "icon": "gear",
                "url" : "pages/chatbot.php",
                "show-header-and-footer": false
            },
            {
                "name": "Mica Session Admin",
                "icon": "gear",
                "url" : "pages/sessionSelector.php",
                "show-header-and-footer": true
            }
        ],
        "control-center": [

        ]
    },

    "no-auth-pages": [
        "pages/chatbot"
    ],


    "no-auth-ajax-actions": [
        "callAI",
        "login",
        "verifyEmail",
        "completeSession",
        "fetchSavedQueries"
    ],

    "project-settings": [
        {
            "key": "chatbot_end_session_url_override",
            "name": "Optional URL Override for Redirect URL when 'End Session' is clicked",
            "required": true,
            "type": "text"
        },
        {
            "key": "chatbot_intro_text",
            "name": "Raw text to show in the UI on session start",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "session_length_days",
            "name": "Number of days in a session (default = 14)",
            "required": false,
            "type": "number",
            "default": 14
        },
        {
            "key": "number_session_callback",
            "name": "Number of previous sessions to hold in memory (default = 1)",
            "required": false,
            "type": "number",
            "default": 1
        },
        {
            "key": "chatbot_end_session_text",
            "name": "Raw text to show in the UI to remind participant to 'end session'",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_redcap_inject",
            "name": "Comma delimited list of instruments to inject into the Chat Context",
            "required": false,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_general",
            "name": "Raw text to inject into and set the chatbot's overall system context, persona, guardrails",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_baseline",
            "name": "Raw text to inject into and tune the chatbot's baseline session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_session_2",
            "name": "Raw text to inject into and tune the chatbot's 2nd session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_session_3",
            "name": "Raw text to inject into and tune the chatbot's 3rd session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_session_4",
            "name": "Raw text to inject into and tune the chatbot's 4th session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_session_5",
            "name": "Raw text to inject into and tune the chatbot's 5th session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_session_6",
            "name": "Raw text to inject into and tune the chatbot's 6th session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "chatbot_system_context_session_7",
            "name": "Raw text to inject into and tune the chatbot's 7th session system context",
            "required": true,
            "type": "textarea"
        },
        {
            "key": "enable-project-debug-logging",
            "name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
            "required": false,
            "type": "checkbox"
        },
        {
            "key": "llm-model",
            "name": "LLM Model",
            "required": false,
            "type": "dropdown",
            "choices": [
                {
                    "value": "gpt-4o",
                    "name": "GPT-4o"
                },
                {
                    "value": "gpt-4.1",
                    "name": "GPT-4.1"
                },
                {
                    "value": "o1",
                    "name": "GPT-o1"
                },
                {
                    "value": "o3-mini",
                    "name": "GPT-o3-mini"
                },
                {
                    "value": "claude",
                    "name": "Claude 3.7 Sonnet"
                },
                {
                    "value": "gemini20flash",
                    "name": "Gemini 2.0 Flash"
                },
                {
                    "value": "llama-Maverick",
                    "name": "Llama 4 Maverick"
                }
            ],
            "default": "gpt-4o"
        },
        {
            "key": "gpt-temperature",
            "name": "GPT Temperature",
            "required": false,
            "type": "number",
            "default": 0.7
        },
        {
            "key": "gpt-top-p",
            "name": "GPT Top P",
            "required": false,
            "type": "number",
            "default": 0.9
        },
        {
            "key": "gpt-frequency-penalty",
            "name": "GPT Frequency Penalty",
            "required": false,
            "type": "number",
            "default": 0.5
        },
        {
            "key": "gpt-presence-penalty",
            "name": "GPT Presence Penalty",
            "required": false,
            "type": "number",
            "default": 0
        },
        {
            "key": "gpt-max-tokens",
            "name": "GPT Max Tokens",
            "required": false,
            "type": "number",
            "default": 800
        },
        {
            "key": "reasoning-effort",
            "name": "<b>Reasoning Effort</b>  <br>(only applicable to o1, o3-mini reasoning models)",
            "required": false,
            "type": "dropdown",
            "choices": [
                {
                    "value": "low",
                    "name": "low"
                },
                {
                    "value": "medium",
                    "name": "medium"
                },
                {
                    "value": "high",
                    "name": "high"
                }
            ],
            "default": "medium"
        }
    ],

    "system-settings": [
        {
            "key": "enable-system-debug-logging",
            "name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
            "required": false,
            "type": "checkbox"
        },
        {
            "key": "twilio-sid",
            "name": "<b>Twilio SID</b>",
            "required": true,
            "type" : "text"
        },
        {
            "key": "twilio-auth-token",
            "name": "<b>Twilio Auth token</b>",
            "required": true,
            "type" : "text"
        },
        {
            "key": "twilio-from-number",
            "name": "<b>Twilio From Number </b><br><i>e.g +16124823490</i>",
            "required": true,
            "type" : "text"
        }
    ],

    "compatibility": {
        "php-version-min": "",
        "php-version-max": "",
        "redcap-version-min": "",
        "redcap-version-max": ""
    }
}
